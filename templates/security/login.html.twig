{% extends 'base.html.twig' %}

{% block title %}Pedibus Jambus - Connexion
{% endblock %}

{% block body %}
	{# Conteneur principal pour centrer le formulaire sur la page #}
	<div
		class="min-h-screen flex items-center justify-center p-4">
		{# La carte du formulaire #}
		<div
			class="w-full max-w-sm bg-white shadow-xl rounded-xl p-8 space-y-6 border border-gray-200">

			{# En-tête du formulaire #}
			<div class="text-center space-y-2">
				<h1 class="text-3xl font-extrabold text-gray-900">Connexion à votre compte</h1>
				<p class="text-sm text-blue-600 font-medium">Veuillez renseigner vos identifiants</p>
			</div>

			<form
				method="post" class="space-y-6">

				{# Affichage des erreurs #}
				{% if error %}
					<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
						<span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
					</div>
				{% endif %}

				{# Champ Email #}
				<div>
					<label for="inputEmail" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out" autocomplete="email" required autofocus placeholder="votre.email@exemple.com">
				</div>

				{# Champ Mot de passe #}
				<div>
					<label for="inputPassword" class="block text-sm font-medium text-gray-700 mb-1">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out" autocomplete="current-password" required placeholder="••••••••">
				</div>

				<input
				type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

				{# Options et lien Mot de passe oublié #}
				<div
					class="flex items-center justify-between">

					{# Case à cocher "Se souvenir de moi" #}
					<label class="flex items-center text-sm text-gray-600">
						<input type="checkbox" name="_remember_me" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
						<span class="ml-2">Se souvenir de moi</span>
					</label>

					{# Lien Mot de passe oublié #}
					<a href="#" class="text-sm font-medium text-blue-600 hover:text-blue-500 transition duration-150 ease-in-out">
						Mot de passe oublié ?
					</a>
				</div>

				{# Bouton de Connexion #}
				<div>
					<button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-lg shadow-sm text-lg font-semibold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out">
						Se connecter
					</button>
				</div>

				{# Lien vers la création de compte #}
				<div class="text-center text-sm">
					<p class="text-gray-600">
						Pas encore de compte ?
						<a href="/register" class="font-medium text-blue-600 hover:text-blue-500">
							Créez un compte facilement
						</a>
					</p>
				</div>

			</form>
		</div>
	</div>
{% endblock %}
